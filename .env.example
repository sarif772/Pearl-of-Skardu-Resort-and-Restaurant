# ============ SERVER CONFIG ============
NODE_ENV=development
PORT=5000

# ============ DATABASE CONFIG ============
MONGODB_URI=mongodb://localhost:27017/pearl-of-skardu-resort
# For MongoDB Atlas (Cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/database-name?retryWrites=true&w=majority

# ============ CORS CONFIG ============
CORS_ORIGIN=http://localhost:3000

# ============ EMAIL CONFIG ============
# Choose service: gmail or smtp
EMAIL_SERVICE=gmail

# Gmail Configuration (if using Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=info@pearlofskarduresort.com

# SMTP Configuration (if using custom SMTP server)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password

# Admin Email (for booking notifications)
ADMIN_EMAIL=admin@pearlofskarduresort.com

# ============ SECURITY ============
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRY=7d
